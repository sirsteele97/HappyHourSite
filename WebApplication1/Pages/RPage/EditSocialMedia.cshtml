@page
@model WebApplication1.EditSocialMediaModel
@{
    Layout = "~/Pages/Shared/_ResturauntEdit.cshtml";
    ViewData["Title"] = "EditSocialMedia";
}

<h3>Social Media</h3>
<form method="post">
    <input type="hidden" asp-for="ResturauntPage.id" />
    <input type="hidden" asp-for="ResturauntPage.Days" />
    <input type="hidden" asp-for="ResturauntPage.Description" />
    <input type="hidden" asp-for="ResturauntPage.Image" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputFacebook">Facebook</label>
            <input asp-for="ResturauntPage.Facebook" class="form-control" />
            <span asp-validation-for="Resturaunt.ResturauntPage.Facebook" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="inputInstagram">Instagrgam</label>
            <input asp-for="ResturauntPage.Instagram" class="form-control" />
            <span asp-validation-for="Resturaunt.ResturauntPage.Instagram" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputTwitter">Twitter</label>
            <input asp-for="ResturauntPage.Twitter" class="form-control" />
            <span asp-validation-for="Resturaunt.ResturauntPage.Twitter" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="inputYoutube">Youtube</label>
            <input asp-for="ResturauntPage.Youtube" class="form-control" />
            <span asp-validation-for="Resturaunt.ResturauntPage.Youtube" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputLinkedIn">LinkedIn</label>
            <input asp-for="ResturauntPage.LinkedIn" class="form-control" />
            <span asp-validation-for="Resturaunt.ResturauntPage.LinkedIn" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="inputYelp">Yelp</label>
            <input asp-for="ResturauntPage.Yelp" class="form-control" />
            <span asp-validation-for="ResturauntPage.Yelp" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </div>
</form>


